{
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "functions": {
    "server.js": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron/run-worker",
      "schedule": "0 8 * * *"
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/server.js"
    }
  ]
} 
